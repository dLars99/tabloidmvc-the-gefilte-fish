@model TabloidMVC.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<div class="row justify-content-center">
    <div class="card col-md-4">
        <h4 class="mt-3 text-primary text-center card-title">Are you sure you want to delete this category?</h4>
        <p class="mt-3 text-primary text-center"><strong>Any posts with this category will be reassigned to 'Other'</strong></p>

        <form class="card-body" asp-action="Delete">
            <div class="form-group ">
                <dl class="row">
                    <dd class="col text-center">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                </dl>
            </div>

            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger btn-block" />
                <a class="btn btn-primary btn-block" asp-controller="Category" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>
