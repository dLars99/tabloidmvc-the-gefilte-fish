@model TabloidMVC.Models.Comment

@{
    ViewData["Title"] = "Delete";
}

<div class="container pt-5">
    <div class="row justify-content-center">
        <div class="card col-md-8">
            <h4 class="mt-3 text-primary text-center card-title">Are you sure you want to delete this comment?</h4>

            <form class="card-body" asp-action="Delete">
                <div class="form-group ">
                    <dl class="row">
                        <dt class="col">
                            @Html.DisplayNameFor(model => model.Subject)
                        </dt>
                        <dd class="col">
                            @Html.DisplayFor(model => model.Subject)
                        </dd>
                    </dl>
                    <dl class="row">
                        <dt class="col">
                            @Html.DisplayNameFor(model => model.Content)
                        </dt>
                        <dd class="col">
                            @Html.DisplayFor(model => model.Content)
                        </dd>
                    </dl>
                </div>
                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-danger btn-block" />
                    <a class="btn btn-primary btn-block" asp-action="Index" asp-route-id="@Model.PostId">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
