@model TabloidMVC.Models.ViewModels.PostCommentViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>@Model.Post.Title</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@foreach (Comment comment in Model.Comments)
{
    <div class="card">
        <div class="card-body">
            <p class="card-text"><small class="text-muted"><i class="fas fa-user"></i> &nbsp; @comment.UserProfile.FullName &nbsp; <i class="far fa-clock"></i> &nbsp; @comment.CreateDateTime</small></p>
            <h5 class="card-title">@comment.Subject</h5>
            <p class="card-text">@comment.Content</p>
        </div>
    </div>
}

<div>
    <a class="btn btn-primary" asp-controller="Post" asp-action="Details" asp-route-id="@Model.Post.Id">Back to post</a>
</div>