@model TabloidMVC.Models.ViewModels.AddTagPostViewModel

@{
    ViewData["Title"] = "AddTagsToPost";
}

<div class="container pt-5">
    <h3 class="mt-3 text-primary text-center">Add some tags to @Model.Post.Title</h3>
    <div class="d-flex justify-content-center" >
        <button type="submit" class=" btn btn-primary btn-block w-50 mt-3 mb-3">Save</button>
    </div>
    <form>
        <div class="d-flex justify-content-around flex-wrap">
            @foreach (Tag tag in Model.Tags)
            {
                <div class="card text-center m-1" style="min-width: 10%">
                    <p class="card-text pr-2 pl-2">@tag.Name</p>
                </div>
            }
        </div>
    </form>

</div>
