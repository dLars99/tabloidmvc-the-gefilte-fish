@model TabloidMVC.Models.ViewModels.AddTagPostViewModel

@{
    ViewData["Title"] = "AddTagsToPost";
}

<div class="container pt-5">
    <h3 class="mt-3 text-primary text-center">Add some tags to @Model.Post.Title</h3>

    <div class="card-deck flex-wrap pt-3">
        @foreach (Tag tag in Model.Tags)
        {
            <div class="card text-center" style="min-width: 15%">
                <p class="card-text">@tag.Name</p>
            </div>
        }
    </div>
</div>
