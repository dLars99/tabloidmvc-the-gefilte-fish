@model TabloidMVC.Models.ViewModels.AddTagPostViewModel

@{
    ViewData["Title"] = "Add Tags to Your Post";
}

<div class="container pt-5">
    <h3 class="mt-3 text-primary text-center">Add some tags to @Model.Post.Title</h3>

    <form asp-controller="Tag" asp-action="AddTagsToPost" method="post">
        <div class="form-group d-flex justify-content-center">
            <button type="submit" class="btn btn-primary btn-block w-50 mt-3 mb-3">Save</button>
        </div>
        <div class="form-group d-flex justify-content-around flex-wrap">
            @foreach (Tag tag in Model.Tags)
            {
                if (Model.CurrentTagIds.Contains(tag.Id))
                {
                    <div class="form-check form-check-inline  m-1" syle="min-width: 10%">
                        <input class="form-check-input" name="SelectedTagIds" type="checkbox" id="ck-@tag.Id" value="@tag.Id" checked>
                        <label class="form-check-label pr-2 pl-2 card-text " for="ck-@tag.Id">@tag.Name</label>
                    </div>
                }
                else
                {
                    <div class="form-check form-check-inline  m-1" syle="min-width: 10%">
                        <input class="form-check-input" name="SelectedTagIds" type="checkbox" id="ck-@tag.Id" value="@tag.Id">
                        <label class="form-check-label pr-2 pl-2 card-text " for="ck-@tag.Id">@tag.Name</label>
                    </div>
                }

            }
        </div>
    </form>


    <div>
        <a asp-controller="Post" asp-action="Details" asp-route-id="@Model.Post.Id">Cancel</a>
    </div>
</div>
